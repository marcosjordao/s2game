@model IEnumerable<Domain.Model.Emprestimo>;
@{
    ViewData["Title"] = "Página inicial";
}

<p>
    <h3>Jogos atualmente emprestados</h3>
    <a asp-controller="Emprestimo" asp-action="Create">Novo Empréstimo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEmprestimo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4">Nenhum jogo emprestado atualmente</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jogo.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amigo.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataEmprestimo)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">devolver</a> |
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
