@model IEnumerable<Domain.Model.Emprestimo>

@{
    ViewData["Title"] = "Empréstimos";
}

<h3>Listagem de Empréstimos</h3>

<p>
    <a asp-action="Index" class="btn btn-default">Voltar</a>
</p>
@if (Model.Count() == 0)
{
    <div class="alert alert-warning" role="alert">
        Nenhum empréstimo registrado
    </div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Jogo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataEmprestimo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataDevolucao)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jogo.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amigo.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataEmprestimo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataDevolucao)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}